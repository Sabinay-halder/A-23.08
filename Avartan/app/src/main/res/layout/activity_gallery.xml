<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_c">

    <include layout="@layout/titlelayout"></include>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <com.widevision.avartan.model.CustomButton
                android:id="@+id/text_All_images"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/fragment_unselected"
                android:text="All"
                android:textColor="@color/white" />

            <com.widevision.avartan.model.CustomButton
                android:id="@+id/text_entreprenur_images"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/fragment_unselected"
                android:text="Entrepreneurship"
                android:textColor="@color/white" />

            <com.widevision.avartan.model.CustomButton
                android:id="@+id/text_finance_images"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/fragment_unselected"
                android:text="Finance"
                android:textColor="@color/white" />

            <com.widevision.avartan.model.CustomButton
                android:id="@+id/text_hr_images"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/fragment_unselected"
                android:text="HR"
                android:textColor="@color/white" />

            <com.widevision.avartan.model.CustomButton
                android:id="@+id/text_it_images"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/fragment_unselected"
                android:text="IT"
                android:textColor="@color/white" />

            <com.widevision.avartan.model.CustomButton
                android:id="@+id/text_marketing_images"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/accent_material_light"
                android:text="Marketing"
                android:textColor="@color/white" />
            <com.widevision.avartan.model.CustomButton
                android:id="@+id/text_strategy_images"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/fragment_unselected"
                android:text="Strategy"

                android:textColor="@color/white" />
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context="com.daimajia.slider.demo.MainActivity"
        android:layout_weight="0.65">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            custom:pager_animation="Accordion"
            custom:auto_cycle="true"
            custom:indicator_visibility="visible"
            custom:pager_animation_span="1100"
            android:layout_height="wrap_content" />

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            custom:selected_color="#0095BF"
            custom:unselected_color="#55333333"

            custom:shape="oval"
            custom:selected_padding_left="5dp"
            custom:selected_padding_right="5dp"
            custom:unselected_padding_left="5dp"
            custom:unselected_padding_right="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            custom:selected_width="6dp"
            custom:selected_height="6dp"
            custom:unselected_width="6dp"
            custom:unselected_height="6dp"
            android:layout_marginBottom="20dp" />

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator2"
            style="@style/AndroidImageSlider_Corner_Oval_Orange"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp" />
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/gallaryTxtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="#000000">

            <com.widevision.avartan.model.CustomTextView
                android:id="@+id/gallaryTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"></com.widevision.avartan.model.CustomTextView>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
